{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "typeRoots": ["./src"]
  },
  "include": ["src/**/*", "src/node-macaddress.d.ts", "config/agent.config.json"],
  "exclude": ["node_modules", "dist"]
}